<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
        <title>Blog</title>
    </head>
    <body>
        <div class="container">
            <h1 class="mb-4">Blog Articles</h1>
            <a href="/articles/new" class="btn btn-success">New Article</a>
            <% articles.map(article => { %>
                <div class="card mt-4">
                    <div class="card-body">
                        <h4 class="card-title"><%= article.title %></h4>
                        <div class="card-subtitle text-muted mb-2">
                            <%= article.date.toLocaleDateString() %>
                        </div>
                        <div class="card-text mb-2"><%= article.description %></div>
                        <a href="articles/<%= article.slug %>" class="btn btn-primary">Read More</a>
                        <form action="/articles/<%= article.id %>" class="d-inline formDelete">
                            <button class="btn btn-danger btnDelete">Delete</button>
                        </form>
                    </div>
                </div>
            <% }) %>
        </div>
        <script>
            const formDelete = document.getElementsByClassName("formDelete")
            const btnDelete = Array.from(document.getElementsByClassName("btnDelete"))
            btnDelete.map((val, ind) => {
                val.addEventListener("click", () => {
                    fetch(formDelete[ind].action, {method: "DELETE"})
                })  
            })
        </script>
    </body>
</html>