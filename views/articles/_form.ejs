<div class="form-group">
    <label for="title">Title</label>
    <input value="<%= article.title %>" type="text" name="title" class="form-control" id="title" placeholder="Title" required>
</div>
<div class="form-group">
    <label for="description">Description</label>
    <textarea name="description" class="form-control" id="description" placeholder="Description"><%= article.description %></textarea>
</div>
<div class="form-group">
    <label for="markdown">Markdown</label>
    <textarea name="markdown" class="form-control" id="markdown" placeholder="Markdown" required><%= article.markdown %></textarea>
</div>
<a href="/" class="btn btn-secondary">Cancel</a>
<button class="btn btn-primary">Save</button>